<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".report">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:text="Box Office Reports here"
            android:textStyle="bold"
            android:id="@+id/clicks"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reporttxt"
            android:layout_below="@id/clicks"
            android:text="Movie Name-B.O Collection-Budget-Verdict"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/report"
            android:layout_below="@id/reporttxt"
            android:layout_centerHorizontal="true"
            android:hint="Please wait till the server gets loaded."
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textSize="18dp"/>



    </RelativeLayout>

</ScrollView>